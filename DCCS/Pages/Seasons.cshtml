@page
@model DCCS.Pages.SeasonsModel

@using Models.SeasonBranch;
@{
    ViewData["Title"] = "Seasons";
}

<div class="page-title">Season List</div>
<div class="season-list">
    @foreach (var season in Model.seasons) {
        <div class="season-box">
        <a asp-page="/Season" asp-route-seasonid="@season.SeasonId">
        <div>
            <div class="header">
                @if (season.Status == SeasonStatus.ONGOING)
                {
                    <div class="season-status">
                        <div class="reddot"></div>
                        <span>LIVE</span>
                    </div>
                }
                else if (season.Status == SeasonStatus.UPCOMING)
                {
                    <div class="season-status">
                        <span>UPCOMING</span>
                    </div>
                } else {
                    <div class="season-status">
                        <span>FINISHED</span>
                    </div>
                }

                @if (season.Type == SeasonType.REGULAR)
                {
                    <div class="image"><img src="~/image/dccs-logo.png" style="height:50px;"/></div>
                }
                else if (season.Type == SeasonType.QUALIFIER)
                {
                    <div class="image"><img src="~/image/faceit-logo.png" style="height: 25px;" /></div>
                }
            </div>
            <div class="description">
                <div class="name">@season.SeasonName</div>
                @if (season.Stage == SeasonStage.GROUPSTAGE) {
                    <div class="stage" style="background-color: #0000ff;">@season.Stage</div>
                } else if (season.Stage == SeasonStage.PLAYOFFS) {
                    <div class="stage" style="background-color: #b30000;">@season.Stage</div>
                } else {
                    <div class="stage" style="background-color: #ff6600;">@season.Stage</div>
                }
                 
                <div class="season-date">
                    <img src="~/image/calendar.png" style="height: 10px; margin-right: 5px;"/>
                    @(season.StartDate.HasValue
                        ? season.StartDate.Value.ToString("MMM dd")
                        : "UNDEFINED")
                    - @(season.EndDate.HasValue
                      ? season.EndDate.Value.ToString("MMM dd, yyyy")
                      : "UNDEFINED")
                </div>
            </div>
        </div>
        </a>
        </div>
    }
</div>




